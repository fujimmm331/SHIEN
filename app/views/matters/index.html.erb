<div class="matter_contents">
  <%= render 'share/menu_bar.html.erb'%>
  <div class="matter_side_index">
    <%= render 'share/search_matter.html.erb'%>
    <div class="matter_main_contents">

      <h1><span class="title">案件一覧</span></h1>
      <%= link_to "csv出力", matters_path(format: :csv), class:["matter_edit_btn","matter_contactlog_btn","matter_csv_right"] %>

      <table class="matter_table_record">
        <% if @matters != []%>
          <tr class="table_title">
            <th>案件名</th>
            <th>先方の担当者</th>
            <th>電話番号</th>
            <th>携帯電話番号</th>
            <th>郵便番号</th>
            <th>住所</th>
            <th>担当</th>
          </tr>
          <% @matters.each do |matter| %>
          <tr class="table_records">
            <td><%= link_to matter.name,matter_path(matter.id) , class:"table_record"%></td>
            <td><%= matter.kana_sales_person%> 様</td>
            <td><%= matter.phone_number%></td>
            <td><%= matter.cell_phone_number%></td>
            <td><%= matter.postal_code%></td>
            <td><%= matter.municipality%><%= matter.address%> <%= matter.building%></td>
            <td><%= matter.user.name%></td>
          </tr>
          <% end %>
        <% else %>
          <div>案件はありません</div>
        <% end %>
      </table>
    </div>
  </div>
</div>