<div class="matter_contents">
  <%= render 'share/menu_bar.html.erb'%>
  <div class="matter_side_index">
    <h2><span class="title">通知一覧</span></h2>
    <% @notifications.each do |notification|%>
    <% judge = (notification.contact_log.status != nil)%>
    <div class="notifications">
      <div class="notification">
        <div class="noti_upper">
          <% if judge %><span class="contact_log_status"><%= notification.contact_log.status%></span><%end%>
        </div>
        <div class="noti_lower">
          <% if judge %>
            <div><span class="noti_user_name"><%= notification.contact_log.user.name%></span>さんより対応依頼があります。</div>
          <% else%>
            <div><span class="noti_user_name"><%= notification.contact_log.user.name%></span>さんがコンタクトログに記入しました。</div>
          <% end%>
          <div class="noti_log_comment"><%= notification.contact_log.comment%></div>
          <div class="noti_log_time"><%=l notification.created_at%></div>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>